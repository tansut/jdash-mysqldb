{
    "compilerOptions": {
        "watch": false,
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "listFiles": false,
        "outDir": "lib",
        "rootDir": "src",
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**"
    ]
}